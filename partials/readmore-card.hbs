<article class="{{post_class}} h-entry w-full lg:w-[26rem]">
   {{#if feature_image}}
    <div class="image-box relative">
        <picture>
            <source srcset="
            {{img_url feature_image size="s" format="avif"}} 280w,
            {{img_url feature_image size="m" format="avif"}} 480w,
            {{img_url feature_image size="l" format="avif"}} 1200w,
            {{img_url feature_image size="xl" format="avif"}} 2000w" sizes="(min-width: 1200px) 480px, 100vw" type="image/avif">
                <source srcset="
            {{img_url feature_image size="s" format="webp"}} 280w,
            {{img_url feature_image size="m" format="webp"}} 480w,
            {{img_url feature_image size="l" format="webp"}} 1200w,
            {{img_url feature_image size="xl" format="webp"}} 2000w" sizes="(min-width: 1200px) 480px, 100vw" type="image/webp">
                <img srcset="
            {{img_url feature_image size="s"}} 280w,
            {{img_url feature_image size="m"}} 480w,
            {{img_url feature_image size="l"}} 1200w,
            {{img_url feature_image size="xl"}} 2000w" sizes="(min-width: 1200px) 480px, 100vw" src="{{img_url feature_image size="m"}}"
            class="featured-image"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
            width="260" height="260">
        </picture>
        <!--{{#foreach authors}}
        <p class="absolute top-4 right-4"><a href="{{url}}"><img class="border-4 border-double border-white rounded-full grayscale-[70%] hover:grayscale-0 hover:scale-150" src="{{img_url profile_image}}" alt="{{name}}'s Avatar" width="40" height="40" loading="lazy"></a></p>
        {{/foreach}}-->
    </div>
    {{/if}}
    <header>
        <h2 class="p-name"><a class="u-url" href="{{url}}">{{title}}</a></h2>
        <div class="flex flex-wrap mt-12 items-center">
            {{^is 'author'}}
            <div class="mr-4">
            {{#primary_author}}
                 <a class="avatar" href="{{url}}"><img class="hover:scale-125 rounded-full" src="{{img_url profile_image}}" alt="{{name}}'s Avatar" width="35" height="25" loading="lazy"></a>
             {{/primary_author}}
            </div>
            {{/is}}
            <div>
                <p><time class="dt-published" datetime="{{date format="YYYY-MM-DD"}}"><a class="font-bold" href="{{url}}">{{date published_at format="DD MMM YYYY"}}</a></time></p>
                <p>{{#primary_tag}}<a class="primary-tag" rel="tag" href="{{url}}">{{name}}</a>{{/primary_tag}} &bull; {{tags from="2" limit="2" separator=" &bull; "}}</p>
            </div>
        </div>
    </header>
</article>