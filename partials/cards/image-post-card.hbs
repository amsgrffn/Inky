<article class="{{post_class}} h-entry">
<header>
    {{#if feature_image}}
    <a class="u-url" href="{{url}}">
        <picture>
          <source
            srcset="
            {{img_url feature_image size="s" format="avif"}} 280w,
            {{img_url feature_image size="m" format="avif"}} 520w,
            {{img_url feature_image size="l" format="avif"}} 1200w,
            {{img_url feature_image size="xl" format="avif"}} 2000w"
            sizes="(min-width: 1200px) 520px, 100vw"
            type="image/avif"
          >
          <source
            srcset="
            {{img_url feature_image size="s" format="webp"}} 280w,
            {{img_url feature_image size="m" format="webp"}} 520w,
            {{img_url feature_image size="l" format="webp"}} 1200w,
            {{img_url feature_image size="xl" format="webp"}} 2000w"
            sizes="(min-width: 1200px) 520px, 100vw"
            type="image/webp"
          >
          <img
            srcset="
            {{img_url feature_image size="s"}} 280w,
            {{img_url feature_image size="m"}} 520w,
            {{img_url feature_image size="l"}} 1200w,
            {{img_url feature_image size="xl"}} 2000w"
            sizes="(min-width: 1200px) 520px, 100vw"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
            width="528" height="325"
          >
        </picture>
    </a>
    {{/if}}
    <div>
       <h2>{{title}}</h2>
       {{#has tag="jeep"}}
       <p class="p-hash-tag"><a href="/jeeps/">Jeep on Film</a></p>
       {{/has}}
    </div>
    </header>
</article>